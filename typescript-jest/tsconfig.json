{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build/",
    "noEmitOnError": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "types": [
      "node",
      "jest"
    ],
  },
  "include": [
    "./src/**.ts",
    "./tests/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}